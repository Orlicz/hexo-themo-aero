<style>
    .article {
        width: 48%;
        margin: 1%;
    }
    .article:nth-of-type(2n+1) {
        order: 1;
    }
    .article:nth-of-type(2n) {
        order: 2;
    }
    .aero-box{
        backdrop-filter: blur(5px);
    }
</style>
<%- partial('_partial/archive', {pagination: 2, index: true}) %>
<script>
    var postlist = document.getElementsByTagName('article');
    var lfth=10;
    var rith=10;
    for(i = 0; i < postlist.length; i++){
        if(i%2) lfth = (+lfth)+(+postlist[i].scrollHeight)+(+100);
        else rith = (+rith)+(+postlist[i].scrollHeight)+(+100);
    }
    document.getElementById("main").style.height = Math.max(rith,lfth)+"px";
</script>
